    <link rel="stylesheet" href="{{ 'component-custom-image-banner-block.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-custom-image-banner-block.css' | asset_url | stylesheet_tag }}</noscript>
    {% for block in section.blocks  %}
      {% liquid
          assign directIntro = block.settings.direct_Intro
          assign directTitle = block.settings.direct_Title
          assign directText = block.settings.direct_Text
          assign directBackgroundColor = block.settings.direct_background_color
          assign directButton1Text = block.settings.direct_hero_btn1_text
          assign directButton1Url = block.settings.direct_hero_btn1_url
          assign directButton2Text = block.settings.direct_hero_btn2_text
          assign directButton2Url = block.settings.direct_hero_btn2_url
          assign placeholder =  '//aleksandar-colovic.myshopify.com/cdn/shopifycloud/shopify/assets/no-image-2048-5e88c1b20e087fb7bbe9a3771824e743c244f437e4f8ba93bbf7b11b53f7824c.gif'
          assign placeholderV2 = '//cdn.shopify.com/shopifycloud/shopify/assets/no-image-2048-5e88c1b20e087fb7bbe9a3771824e743c244f437e4f8ba93bbf7b11b53f7824c.gif'
          assign block_width = block.settings.block_width
          assign block_border_radius = block.settings.block_border_radius
          assign block_spacing_top = block.settings.block_spacing_top
          assign block_spacing_bottom = block.settings.block_spacing_bottom
          assign align_items_v =  block.settings.align_items_v
          assign align_items_h =  block.settings.align_items_h
          assign direct_Intro_color = block.settings.direct_Intro_color
          assign direct_Intro_font_size = block.settings.direct_Intro_font_size
          assign direct_Intro_spacing_bottom = block.settings.direct_Intro_spacing_bottom
          assign direct_Title_color = block.settings.direct_Title_color
          assign direct_Title_font_size = block.settings.direct_Title_font_size
          assign direct_Title_spacing_bottom = block.settings.direct_Title_spacing_bottom
          assign direct_Text_color = block.settings.direct_Text_color
          assign direct_Text_font_size = block.settings.direct_Text_font_size
          assign direct_Text_spacing_bottom = block.settings.direct_Text_spacing_bottom
          
        assign direct_hero_btn1_size = block.settings.direct_hero_btn1_size
        assign direct_hero_btn1_width = block.settings.direct_hero_btn1_width
        assign direct_hero_btn1_color = block.settings.direct_hero_btn1_color
        assign direct_hero_btn1_color_bg = block.settings.direct_hero_btn1_color_bg
        assign direct_hero_btn1_color_hover = block.settings.direct_hero_btn1_color_hover
        assign direct_hero_btn1_color_bg_hover = block.settings.direct_hero_btn1_color_bg_hover

        assign direct_hero_btn2_size = block.settings.direct_hero_btn2_size
        assign direct_hero_btn2_width = block.settings.direct_hero_btn2_width
        assign direct_hero_btn2_color = block.settings.direct_hero_btn2_color
        assign direct_hero_btn2_color_bg = block.settings.direct_hero_btn2_color_bg
        assign direct_hero_btn2_color_hover = block.settings.direct_hero_btn2_color_hover
        assign direct_hero_btn2_color_bg_hover = block.settings.direct_hero_btn2_color_bg_hover
