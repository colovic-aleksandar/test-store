            <div class="heading-wrapper">
              {% if block.settings.heading_text %}
                <h2 class="heading">
                  {{ block.settings.heading_text }}
                </h2>
              {% endif %}
              {% if block.settings.description_text %}
                <p class="description">
                  {{ block.settings.description_text }}
                </p>
              {% endif %}
            </div>
            <div class="email-wrapper">
              {% form 'customer' %}
                <div class="email">
                  <input
                    type="email"
                    name="contact[email]"
                    placeholder="Email" />
                </div>

                <div class="submit">
                  <input
                  id="submit"
                  type="image"
                  src="{{block.settings.img_send |  image_url  }}"
                  width="25px"
                  height="25px"
                  
