  {
    "name": "Direct Help Section",
    "settings": [
      
      {
        "type": "text",
        "id": "direct_heading",
        "label": "Help Section Heading"
      },
      {
        "type": "text",
        "id": "direct_subheading",
        "label": "Help Section Subeading"
      },
       {
        "type": "text",
        "id": "direct_mobile",
        "label": "Help Section Mobile"
      }
    ],
    "blocks": [
      {
        "type": "help",
        "name": "Help Item",
        "settings": [
          {
        "type": "text",
        "id": "direct_help_text",
        "label": "Help Item Text"
      },
      {
        "type": "image_picker",
        "id": "direct_image",
        "label": "Help Item Icon"
      }
    ]
      }
    ],
    "max_blocks": 6,
    "presets": [
      {
        "name": "Direct Help Section"
      }
    ]
  }
{% endschema %}

