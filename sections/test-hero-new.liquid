      {% assign backgroundImage = block.settings.background_image | img_url: 'master' %}
      <div class="direct-hero-block-container" style="
      {% if block_width !=blank %}
        width:{{block_width}};
        {% endif %}
        {% if block_border_radius != 0 %}
        border-radius: {{block_border_radius}}px;
        {% endif %}

      ">
        <div class="direct-hero-text"  style=" 
        {% if directBackgroundColor != blank %}
          background: {{directBackgroundColor}}; 
          {% endif %}
         {% if backgroundImage != placeholder and  backgroundImage != placeholderV2 %}
          {% if backgroundImage != blank %}
          background: url('{{backgroundImage}}');
          {% endif %}

        {% endif %}
        
        {% if block_spacing_top !=blank %}
          padding-top:{{block_spacing_top}}px;
        {% endif %}
        {% if block_spacing_bottom !=blank %}
          padding-bottom:{{block_spacing_bottom}}px;
        {% endif %}
        justify-content: {{align_items_v}};
        align-items: {{align_items_h}};
        " >

    <div class="hero-text-wrapper">
        {% if directIntro != blank  %}
          <p class="table-subheading heroIntro text-center c-title text-white" style=" 
            {% if direct_Intro_color != blank %}
            color: {{direct_Intro_color}};
            {% endif %}

            {% if direct_Intro_font_size != 0 %}
            font-size: {{direct_Intro_font_size}}px;
            {% endif %}
            {% if direct_Intro_spacing_bottom != 0 %}
            padding-bottom: {{direct_Intro_spacing_bottom}}px;
            {% endif %}
            ">
            {{ directIntro }}
          </p>
        {% endif %}
      {% if directTitle != blank %}
        <p class="table-heading heroTitle text-center c-title text-white"
        style=" 
          {% if direct_Title_color != blank %}
          color: {{direct_Title_color}};
          {% endif %}

          {% if direct_Title_font_size != 0 %}
          font-size: {{direct_Title_font_size}}px;
          {% endif %}
          {% if direct_Title_spacing_bottom != 0 %}
          padding-bottom: {{direct_Title_spacing_bottom}}px;
          {% endif %}
          ">
          {{ directTitle }}
        </p>
      {% endif %}
  
      {% if directText != blank %}
        <p class="heroText text-center c-title"
        style=" 
          {% if direct_Text_color != blank %}
          color: {{direct_Text_color}};
          {% endif %}

          {% if direct_Text_font_size != 0 %}
          font-size: {{direct_Text_font_size}}px;
          {% endif %}
          {% if direct_Text_spacing_bottom != 0 %}
          padding-bottom: {{direct_Text_spacing_bottom}}px;
          {% endif %}
          ">
          {{ directText }}
        </p>
      {% endif %}
    </div>
        
        {% if directButton1Text != blank or directButton2Text != blank %}
        <div class="container">
    
          <a href="{{ directButton1Url }}" class="hero-button-primary btn1"
          style="
          font-size: {{direct_hero_btn1_size}}px;
          width: {{direct_hero_btn1_width}}px !important;
          color: {{direct_hero_btn1_color}};
          background-color: {{direct_hero_btn1_color_bg}};
          ">{{ directButton1Text }}</a>
    
          <a href="{{ directButton2Url }}" class="hero-button-primary btn2" style="
          font-size: {{direct_hero_btn2_size}}px;
          width: {{direct_hero_btn2_width}}px !important;
          color: {{direct_hero_btn2_color}};
          background-color: {{direct_hero_btn2_color_bg}};
          ">{{ directButton2Text }}</a>
        </div>
        {% endif %}
        <style>
          .btn1:hover {
            {%if direct_hero_btn1_color_hover != blank %}
            color: {{direct_hero_btn1_color_hover}} !important;
            {% endif %}
            {%if direct_hero_btn1_color_bg_hover != blank %}
            background: {{direct_hero_btn1_color_bg_hover}} !important;
            {% endif %}
          }

          .btn2:hover {
            {%if direct_hero_btn2_color_hover != blank %}
            color: {{direct_hero_btn2_color_hover}} !important;
            {% endif %}
            {%if direct_hero_btn2_color_bg_hover != blank %}
            background: {{direct_hero_btn2_color_bg_hover}} !important;
            {% endif %}
          }
        </style>
      </div>
      </div>
    {% endfor %}
    
  {% endif %}
</section> 
<style>
#{{ sectionID }}  .direct-hero-content_wrapper {
    display: flex;
    min-height: 570px;
    height: 100%;
    width:{{container_width}};
    {% if container_bg_color != blank and container_bg_gradient == blank and container_bg_image == placeholder or  container_bg_image == placeholderV2 %}
    background: {{ container_bg_color }};
  {% endif %}
  {% if container_bg_gradient != blank and  container_bg_image == placeholder or  container_bg_image == placeholderV2 %}
    background: {{ container_bg_gradient }};
  {% endif %}
  {% if container_bg_image != placeholder and  container_bg_image != placeholderV2 %}
    {% if container_bg_image != blank %}
      background: url('{{container_bg_image}}');
    {% endif %}
  {% endif %}
  {% if container_padding_top_desktop != blank %}
    padding-top: {{ container_padding_top_desktop }}px;
  {% endif %}
  {% if container_padding_bottom_desktop != blank %}
    padding-bottom: {{ container_padding_bottom_desktop }}px;
  {% endif %}

  }

  #{{ sectionID }}  .direct-hero-block-container {
    display: flex;
    overflow: hidden;
  }
  #{{ sectionID }} .direct-hero-text {
    padding: 20px;
    display: flex;
    flex-direction: column;
    width: 100%;
    background-position: center !important;
    background-size: cover !important;
    transition: transform 0.5s ease-in-out;
  }
  #{{ sectionID }} .image-only:hover{
    {% if section.settings.zoom_background == true %}
    transform: scale(1.05);
{% endif %}
  }
  #{{ sectionID }} .direct-hero-block-container figure {
    margin: 0;
    display: flex;
    height: 100%;
    overflow: hidden;
  }


  #{{ sectionID }} .heroIntro {
    font-family: 'Montserrat'
    , sans-serif;
    text-transform: uppercase;
    opacity: 0.95;
    padding: 10px
  }
  #{{ sectionID }} .heroTitle {
    font-family: var(--hero-heading-font) !important;
    font-weight: 700;
    padding: 10px 50px;
    line-height: 40px !important;
  }
  #{{ sectionID }} .heroText {
    padding: 0 50px;
    font-weight: 400 !important;
    line-height: 22px;
    font-family: 'Montserrat',sans-serif;
  }
  #{{ sectionID }} .hero-button-primary {
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 30px;
    font-weight: 700;
    text-transform: uppercase;
    font-family: var(--body-font);
    margin: 5px;
    text-align: center;
    transition: all .5s cubic-bezier(.25,.46,.45,.94);
    transform: translate(0);
  
  }
  #{{ sectionID }} .container {
    display: flex;
  }
  .collection_section_banner {
    min-height: 212px !important;
    gap: 20px;
}

.collection_section_banner  .direct-hero-text {
    background-size: cover !important;
    aspect-ratio: 235/99;
}

.collection_section_banner b {
    background: #ffffffcc;
    color: #000;
    text-transform: uppercase;
    font-weight: 400;
    letter-spacing: 0;
    padding: 0 10px;
    font-family: Bebas Neue;
    display: inline-block;
    font-size: 30px;
    line-height: 40px;
    margin-bottom: 5px;
}

.collection_section_banner  p.table-subheading.heroIntro.text-center.c-title.text-white {
    color: #fff;
    font-family: "Bebas Neue", sans-serif !important;
    font-size: 22px !important;
    letter-spacing: 0;
    line-height: 37px;
    text-align: center;
    height: 34px;
    width: 179px;
    background-color: #fd9e4ecc;
    font-weight: 500;
    padding: 0 !important;
}

.collection_section_banner  p.heroText.text-center.c-title {
    margin-top: 5px;
    padding: 0 !important;
    text-align: left;
}
.collection_section_banner > .direct-hero-block-container:last-child p.heroText.text-center.c-title {

   
}
  @media all and (max-width: 1440px) {
    #{{ sectionID }} .container {
      flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
  } }
  @media all and (max-width: 992px) {
    #{{ sectionID }} .hero-button-primary {
      margin: 10px !important;
    }
#{{ sectionID }}  .direct-hero-content_wrapper {
  {% if container_padding_top_tablet != blank %}
  padding-top: {{container_padding_top_tablet}}px;
{% endif %}
{% if container_padding_bottom_tablet != blank %}
  padding-bottom: {{container_padding_bottom_tablet}}px;
{% endif %}
}
    #{{ sectionID }} .heroTitle {
      font-size: 32px;
    }

  }
  @media all and (max-width: 768px) {

  #{{ sectionID }} .direct-hero-block-container:has(.image-only) {
  display: none;
}

#{{ sectionID }} .direct-hero-block-container {
  flex-basis: 100% !important;
}
    #{{ sectionID }} .container {
      flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    }
    #{{ sectionID }}  .hero-button-primary {
      margin: 10px;
    }
    #{{ sectionID }}  .heroTitle {
      font-size: 28px;
    }
    #{{ sectionID }}  .direct-hero-content_wrapper {
  {% if container_padding_top_mobile != blank %}
  padding-top: {{container_padding_top_mobile}}px;
{% endif %}
{% if container_padding_bottom_mobile != blank %}
  padding-bottom: {{container_padding_bottom_mobile}}px;
{% endif %}
}
    .collection_section_banner {
        flex-wrap: wrap;
      }
    .collection_section_banner .direct-hero-block-container {
      width: 100%;
    }


  }

</style>
